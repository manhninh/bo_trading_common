{
  "name": "bo-trading-common",
  "version": "1.3.2",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/smap-freelancer/bo_trading_common.git"
  },
  "license": "MIT",
  "author": "Ninh Pham <manhninh91@gmail.com>",
  "main": "lib/**/*.js",
  "types": "lib/**/*.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf ./lib && tsc --build tsconfig.json",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix --format verbose",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json 'src/**/*.ts' --fix --format verbose",
      "prettier --write --config ./.prettierrc"
    ]
  },
  "dependencies": {
    "express": "^4.16.3",
    "moment": "^2.22.2",
    "mongoose": "^5.12.4",
    "mongoose-paginate": "^5.0.3",
    "nodemailer": "^6.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/mongoose-paginate": "^5.0.8",
    "@types/node": "^14.14.41",
    "@types/nodemailer": "^6.4.1",
    "@types/winston": "^2.3.9",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0"
  }
}
